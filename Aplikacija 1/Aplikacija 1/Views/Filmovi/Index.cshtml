            <th>
                @Html.DisplayNameFor(model => model.Trailer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CijenaUlaznice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProsjecnaOcjena)
